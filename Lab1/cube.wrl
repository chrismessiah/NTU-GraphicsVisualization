#VRML V2.0 utf8
#a cube made up of 6 squares

Background {skyColor 0 0 1}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     1 0 0   #r g b
			specularColor    1 1 1
			transparency 0 
			shininess 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
                point [
				# bottom vertices
				1  		0  		-1	#vertex 0
				-1  	0   	-1	#vertex 1
				-1  	1 	 	-1	#vertex 2
				1  		1  		-1	#vertex 3

				# upper verticess
				1  		0  		1	#vertex 4
				-1  	0   	1	#vertex 5
				-1  	1 	 	1	#vertex 6
				1  		1  		1	#vertex 7
                ]
            }
		coordIndex [
			#bottom 
				0,  1,  2,  3, -1,
			#top
				7,  6,  5,  4, -1, # cannot be 4,5,6,7 due to incorrect normalvector
			#side 1
				0,  4,  5,  1, -1,
			#side 2
				1,  5,  6,  2, -1,
			#side 3
				2,  6,  7,  3, -1,
			#side 4
				3,  7,  4,  0, -1,
			]
			
	}
}
