#VRML V2.0 utf8
#one sided hexagon, has to be rotated to be viewed due to viewing angle 

Background {skyColor 0 0 1}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     1 0 0   #r g b
			specularColor    1 1 1	 
			transparency 0
			shininess 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
                point [
				1  		0  		0	#vertex 0
				0.5  	-1   	0	#vertex 1
				-0.5  	-1  	0	#vertex 2
				-1  	0  		0	#vertex 3
				-0.5  	1  		0	#vertex 4
				0.5  	1  		0	#vertex 5
                ]
            }
		coordIndex [
			#bottom 
			 0,  1,  2,  3,  4,  5
			]
			
	}
}
